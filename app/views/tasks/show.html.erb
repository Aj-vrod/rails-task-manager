<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<% if @task.completed %>
  <p>✅ This task is completed</p>
<% else %>
  <p>⬜️ This task is not completed</p>
<% end %>
<%= link_to "❌", task_path(@task), method: :delete, data: { confirm: "Are you sure?"}  %> <br>
<%= link_to "Edit this task", edit_path  %> <br>
<%= link_to "Back to list", tasks_path %>
